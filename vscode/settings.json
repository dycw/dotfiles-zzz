{
  // editor
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.cursorSurroundingLines": 10,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.minimap.enabled": false,
  "editor.rulers": [80],
  "editor.suggest.localityBonus": true,
  "editor.wordWrap": "bounded",
  // explorer
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.excludeGitIgnore": true,
  // files
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 100,
  "files.exclude": {
    ".direnv": true,
    ".mypy_cache": true,
    ".pytest_cache": true,
    ".venv": true,
    "**/__pycache__": true,
    "node_modules": true
  },
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  // git
  "git.autofetch": true,
  "git.branchPrefix": "dycw-",
  "git.branchProtection": ["master"],
  "git.branchProtectionPrompt": "alwaysCommitToNewBranch",
  "git.branchRandomName.enable": true,
  "git.defaultBranchName": "master",
  "git.enableSmartCommit": true,
  "git.fetchOnPull": true,
  "git.followTagsWhenSync": true,
  "git.ignoreSubmodules": true,
  "git.mergeEditor": true,
  "git.openAfterClone": "alwaysNewWindow",
  "git.pruneOnFetch": true,
  "git.pullBeforeCheckout": true,
  "git.rebaseWhenSync": true,
  "github.gitProtocol": "ssh",
  // github
  "githubPullRequests.createOnPublishBranch": "never",
  "githubPullRequests.defaultMergeMethod": "squash",
  "githubPullRequests.notifications": "pullRequests",
  "githubPullRequests.pullBranch": "always",
  "githubPullRequests.pushBranch": "always",
  // html
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "html.format.indentInnerHtml": true,
  // jsonc
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // markdown
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // prettier
  "prettier.proseWrap": "always",
  // python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportCallInDefaultInitializer": "error",
    "reportImplicitOverride": "error",
    "reportImplicitStringConcatenation": "error",
    "reportImportCycles": "error",
    "reportMissingSuperCall": "error",
    "reportPropertyTypeMismatch": "error",
    "reportShadowedImports": "error",
    "reportUninitializedInstanceVariable": "error",
    "reportUnknownArgumentType": "none",
    "reportUnknownMemberType": "none",
    "reportUnknownVariableType": "none",
    "reportUnnecessaryTypeIgnoreComment": "error",
    "reportUntypedBaseClass": "none",
    "reportUnusedCallResult": "error"
  },
  "python.analysis.typeCheckingMode": "strict",
  "python.testing.pytestArgs": ["--color=yes"],
  "python.testing.pytestEnabled": true,
  "pythonTestExplorer.testFramework": "pytest",
  // python - black
  "black-formatter.args": ["--line-length=80", "--skip-magic-trailing-comma"],
  // python - ruff
  "ruff.args": [
    "--select=A", // flake8-builtins
    "--select=ANN", // flake8-annotations
    "--select=ASYNC", // flake8-async
    "--select=B", // flake8-bugbear
    "--select=BLE", // flake8-blind-excpt
    "--select=C4", // flake8-comprehensions
    "--select=E,W", // pycodestyle
    "--select=EM", // flake8-errmsg
    "--select=EXE", // flake8-executable
    "--select=F", // pyflakes
    "--select=FBT", // flake8-boolean-trap
    "--select=I", // isort
    "--select=N", // pep8-naming
    "--select=S", // flake8-bandit
    "--select=T10", // flake8-debugger
    "--select=UP", // pyupgrade
    "--select=YTT", // flake8-2020
    "--fixable=ALL"
  ],
  "ruff.importStrategy": "useBundled",
  // vim
  "vim.gdefault": true,
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindingsNonRecursive": [
    // escape
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    },
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    },
    {
      "before": ["k", "j"],
      "after": ["<Esc>"]
    },
    {
      "before": ["k", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.leader": "<Space>",
  "vim.showMarksInGutter": true,
  "vim.smartRelativeLine": true,
  "vim.sneak": true,
  "vim.sneakReplacesF": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.targets.enable": true,
  "vim.useSystemClipboard": true,
  "vim.visualstar": true,
  // window
  "window.title": "${rootName}",
  // workbench
  "workbench.iconTheme": "vscode-icons"
}
